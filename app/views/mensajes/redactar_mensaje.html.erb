<% @title= "UCLABOOK - Redactar Mensaje" %>

        <div class="wrapper wrapper-content">
        <div class="row">
            <%= render 'menu_mensajes' %>
            <div class="col-lg-9 animated fadeInRight">
            <div class="mail-box-header">
                <h2>
                    Redactar Mensaje
                </h2>
            </div>
                <div class="mail-box">


                <div class="mail-body">

                    <form action="/mensaje/enviar_mensaje" method="POST" class="form-horizontal">
                        <%= token_tag %>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Para:</label>
                            <div class="col-sm-10">
                                <select class="form-control" name="id_usuario2" required>
                                    <% @usuarios.each do |user| %>
                                        <option value="<%= user.id %>" <%= 'selected="selected"' if (user.id.to_i == params[:user].to_i) %>>
                                            <%= user.username %>
                                        </option>
                                    <% end %>
                                </select>
                            </div>
                            
                        </div>
                        <div class="form-group" style="border-bottom: 1px solid #e7eaec;">
                            <label class="col-sm-2 control-label">Asunto</label>
                            <div class="col-sm-10">
                                <input type="text" name="asunto" class="form-control" required>
                            </div>
                        </div>
                        <div class="form-group" style="border-bottom: 1px solid #e7eaec;">
                            <label class="col-sm-2 control-label">Categoria</label>
                            <div class="col-sm-10">
                                <select name="categoria" class="form-control" required>
                                    <option value="1">Trabajo</option>
                                    <option value="2">Documentos</option>
                                    <option value="3">Social</option>
                                    <option value="4">√Årea de conocimiento</option>
                                    <option value="5">Clientes</option>
                                </select>
                            </div>
                        </div>
                        <div class="mail-text h-200">
                                <textarea name="contenido" style="width: 100%;height: 300px;" required></textarea>
                        </div>
                        <div class="mail-body text-right tooltip-demo">
                            <button class="btn btn-sm btn-primary">Enviar</button>
                        </div>
                        <div class="clearfix"></div>
                        
                    </form>

                </div>
                </div>
            </div>
        </div>
    </div>