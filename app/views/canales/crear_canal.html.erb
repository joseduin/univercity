<% @title = ("UCLABOOK - Crear Canal" ) %>

            <div class="row wrapper border-bottom white-bg page-heading">
                <div class="col-lg-10">
                    
                    <h2>Crear Canal</h2>
                    
                    <ol class="breadcrumb">
                        <li>
                            <%= link_to 'Inicio', timelines_path, method: :get %>
                        </li>
                        <li>
                            <%= link_to 'Buscar Canales', '/canales?cha=', method: :get %>
                        </li>
                        <li class="active">
                                <strong>Crear Canal</strong>
                        </li>
                    </ol>
                </div>
                <div class="col-lg-2">

                </div>
            </div>
        <div class="wrapper wrapper-content">
            <div class="row animated fadeInRight">
                <div class="col-md-12">
                    <div class="ibox float-e-margins">
                        <div class="ibox-title">
                            <h5>Formulario para crear canal</h5>
                        </div>
                        <div class="ibox-content">
                        <div>
                            
                        <form action="/canales/validar_crear_canal" method="POST" class="m-t"
                        enctype="multipart/form-data">
                            <%= token_tag %>
                            <div class="form-group" style="padding-bottom: 30px;">
                                <label class="control-label col-sm-4" >Nombre:</label>
                                <div class="col-sm-8">
                                    <input type="phone" name="nombre" class="form-control" placeholder="Nombre" required>
                                </div>
                            </div>
                            <div class="form-group" style="padding-bottom: 30px;">
                                <label class="control-label col-sm-4" >Descripci√≥n:</label>
                                <div class="col-sm-8">
                                    <input type="text" name="descripcion" class="form-control" placeholder="descripcion" required>
                                </div>
                            </div>
                            <div class="form-group" style="padding-bottom: 30px;">
                                <label class="control-label col-sm-4" >Interes:</label>
                                <div class="col-sm-8">
                                    
                                    <select name="interes" class="form-control" required>
                                        <% @intereses.each do |interes|  %>
                                          <option value="<%= interes.id %>"><%= interes.nombre %></option>
                                        <% end %>
                                    </select>
                                    
                                </div>
                            </div>
                            <div class="form-group" style="padding-bottom: 30px;">
                                <label class="control-label col-sm-4" >Imagen:</label>
                                <div class="col-sm-8">
                                    <input type="file" name="foto" class="form-control" required>
                                </div>
                            </div>
                            <br>
                            <br>
                            
                            <button type="submit" class="btn btn-primary block full-width m-b">Crear Canal</button>
                        </form>    
                            
                        </div>
                        </div>
                    </div>
                </div>
            </div>
        <div class="footer">
            <div class="pull-right">
                10GB de <strong>250GB</strong> Gratis.
            </div>
            <div>
                <strong>Copyright</strong> UCLABooK &copy; 2017-2018
            </div>
        </div>

        
